<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task-App: {{ user.name }}</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body id="isAuth">
    {{>header}}
    <main class="user-main">
        <div class="user">
            <form class="form" autocomplete="off" id="updateForm">
                <div class="form--group">
                    <label class="form--label headings">User Details & Update</label>
                </div>
                <div class="form--group">
                    <input type="text" class="form--input" id="email" placeholder="Email" value="{{user.email}}" disabled>
                    <label for="email" class="form--label">Email</label>
                </div>
                <div class="form--group">
                    <input type="text" name="name" class="form--input" id="updateName" placeholder="New Name" value="{{user.name}}" required>
                    <label for="updateName" class="form--label">New Name</label>
                </div>
                <div class="form--group">
                    <input type="password" name="password" class="form--input" id="updatePassword" minlength="8" placeholder="New Password" required>
                    <label for="updatePassword" class="form--label">New Password</label>
                </div>
                <div class="form--group" id="updateInfo"></div>
                <div class="form--group">
                    <button class="btn btn--green center" type="submit">save</button>
                </div>
            </form>
        </div>
        <div class="user">
            <div class="form marginBS" id="logoutAll">
                <div class="form--group">
                    <label class="form--label headings marginBS">Logout all sessions</label>
                    <button class="btn btn--blue center" id="logoutAll">logout</button>
                </div>
            </div>
            <form class="form" autocomplete="off" id="deleteUser">
                 <div class="form--group">
                    <input type="password" name="password" class="form--input" id="password" placeholder="Enter Password" required>
                    <label for="password" class="form--label">Enter Password</label>
                </div>
                <div class="form--group" id="deleteInfo"></div>
                <div class="form--group">
                    <label class="form--label headings marginBS">Delete your account</label>
                    <button class="btn btn--warn center" type="submit">delete</button>
                </div>
            </form>
        </div>
    </main>
    {{>footerUser}}
    <script src="../js/app.js"></script>
</body>
</html>